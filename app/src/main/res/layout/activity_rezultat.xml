<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tomislav.piskur.com.povrsinatrokuta.Activity.Rezultat">


<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/povrsina_trokuta_iznosi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_above="@+id/tvRezultat"
        android:layout_centerInParent="true"
        android:id="@+id/tvRezultatHeader"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/tvRezultat"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/povratak"
        android:id="@+id/btnPovratak"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>



